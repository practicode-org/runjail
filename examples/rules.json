{
    "sources_dir": "/tmp/sources",
    "sources_size_limit_bytes": 6000,
    "stages": [
        {
            "name": "compile",
            "command": "/usr/bin/clang++ -x c++ -o /tmp/out/prog {sources}",
            "limits": {
                "address_space_mb": 400,
                "run_time_sec": 8.0,
                "file_descriptors": 256,
                "file_writes_mb": 16,
                "threads": 1600
            }
        },
        {
            "name": "run",
            "command":"/tmp/out/prog",
            "limits": {
                "address_space_mb": 5,
                "run_time_sec": 8.0,
                "file_descriptors": 32,
                "file_writes_mb": 16,
                "threads": 64
            }
        }
    ]
}
